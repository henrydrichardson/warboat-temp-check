<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/myCoordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currency"
        android:layout_width="151dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aldrich"
        android:text="1234"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coins"
        android:layout_width="38dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/coins" />


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="462dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/skinName_1"
                android:layout_width="177dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/heebo_thin"
                android:text="PubSub Skin"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/skinPNG_1"
                android:layout_width="172dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pubsub" />

            <Button
                android:id="@+id/buySkin_1"
                android:layout_width="177dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:text="buy for 15 coins" />


            <TextView
                android:id="@+id/skinName_2"
                android:layout_width="148dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/heebo_thin"
                android:text="Kuzco Skin"
                android:textAlignment="center"
                android:textSize="24sp" />
            <ImageView
                android:id="@+id/skinPNG_2"
                android:layout_width="172dp"
                android:layout_height="157dp"
                app:srcCompat="@drawable/kuzco"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/buySkin_2"
                android:layout_width="177dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:text="buy for 15 coins" />

            <TextView
                android:id="@+id/skinName_3"
                android:layout_width="148dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/heebo_thin"
                android:text="Lockheed Martin Skin"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/skinPNG_3"
                android:layout_width="172dp"
                android:layout_height="157dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/lockheed" />
            <Button
                android:id="@+id/buySkin_3"
                android:layout_width="177dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:text="buy for 15 coins" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>


</android.support.design.widget.CoordinatorLayout>